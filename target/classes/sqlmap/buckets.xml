<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Buckets">
    <resultMap id="result" class="demo.Model.Buckets">
        <result property="id" column="id"/>
        <result property="raffleId" column="raffleId"/>
        <result property="bucketId" column="bucketId"/>
        <result property="entry" column="entry"/>
        <result property="tickets" column="tickets"/>        
    </resultMap>

    <sql id="selectAll">
        SELECT
        id,
        raffleId,
        bucketId,
        entry,
        tickets
    </sql>

    <select id="selectRaffleId" resultMap="Buckets.result">
        SELECT
        id,
        raffleId,
        bucketId,
        entry,
        tickets
        FROM buckets
        WHERE raffleId = #value#
    </select>

    <select id="selectBucketId" resultMap="Buckets.result">
        SELECT
        id,
        raffleId,
        bucketId,
        entry,
        tickets
        FROM buckets
        WHERE bucketId = #value#
    </select>    

    <select id="getAll" resultMap="Buckets.result">
        <include refid="selectAll"/>
        LIMIT #offset#, #limit#
    </select>

    <select id="getById" parameterClass="int" resultMap="Buckets.result">
        <include refid="selectAll"/>
        WHERE id = #value#
        LIMIT 1
    </select>

    <insert id="add" parameterClass="demo.Model.Buckets">
        INSERT
        INTO buckets SET
        raffleId = #raffleId#,
        bucketId = #bucketId#,
        entry = #entry#,
        tickets = #tickets#

        <selectKey keyProperty="id" resultClass="int">
            SELECT
            LAST_INSERT_ID() AS value
        </selectKey>
    </insert>

    <insert id="update" parameterClass="demo.Model.Buckets">
        UPDATE buckets SET
        tickets = #tickets#,
        WHERE bucketId = #bucketId#
    </insert>

    <select id="getByCriteria" parameterClass="demo.Model.Buckets" resultMap="Buckets.result">
        <include refid="selectAll"/>
        WHERE raffleId = #raffleId#,
        bucketId = #bucketId#
        LIMIT 1
    </select>

    <select id="getWinner" parameterClass="demo.Model.Buckets" resultMap="Buckets.result">
        SELECT entry FROM buckets
        WHERE raffleId = #raffleId#,
        bucketId = #bucketId#
        ORDER BY RAND()
        LIMIT 1
    </select>

    <select id="delete" parameterClass="demo.Model.Buckets" resultMap="Buckets.result">
        DELETE FROM buckets
        WHERE raffleId = #raffleId#,
        entry = #entry#
    </select>

    <select id="deleteRaffle" parameterClass="demo.Model.Buckets" resultMap="Buckets.result">
        DELETE FROM buckets
        WHERE raffleId = #raffleId#
    </select>

    <select id="deleteBucket" parameterClass="demo.Model.Buckets" resultMap="Buckets.result">
        DELETE FROM buckets
        WHERE bucketId = #bucketId#
    </select>

</sqlMap>